@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p class="text-danger">Prepare for judgement.</p>
    </div>
}
else
{
    <div class="jumbotron">
        <img src ="~/lib/assets/logo.png" id="logo" alt="" />
        <hr class="my-4">
        <h1>This web app uses machine learning</h1> 
        <h2>to determine the genre of your song.</h2>
        <br />
        <p>Technologies used: </p>
        <br />
        <p>APIs used: </p>
        <p class="lead">
            <a class="btn btn-secondary btn-lg" href="#" role="button">Learn more</a>
        </p>
    </div>
}



